{
    "files.exclude": {
        "**/.bash_history": true,
        "**/.bashrc": true,
        "**/.python-history": true,
        "**/.repo": true,
        "**/.subversion": true,
        "**/.wget-hsts": true,
        "**/build-rpi": true,
        "**/build-rpi-musl": true,
        "**/nohup*": true,
        "bin/repo": true,
        "container/opt": true
    },
    "editor.renderWhitespace": "all",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "bracketLens.mode": "auto"
}
